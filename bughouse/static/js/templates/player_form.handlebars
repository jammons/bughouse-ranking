<form id="player-form" action="." method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" name="name" placeholder="Player Name">
    </div>
    <div class="form-group">
        <label for="icon">Icon</label>
        <input type="file" name="icon">
        <p class="help-block">Images should be at least 200x200</p>
    </div>
    <button class="submit btn btn-lg btn-success">Create</button>
</form>
