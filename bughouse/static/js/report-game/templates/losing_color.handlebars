<div class="row">
    <div class="col-xs-12"> 
        <h2>Pick losing team's colors</h2>
    </div>
</div>
<div class="row">
    <div class="col-xs-5">
        <div class="player-container lose{{#if isWhiteLoser }} selected{{/if}}">
            <img src="{{ losingWhite.icon_url }}" class="player img-responsive" id="{{ losingWhite.name }}"/>
            <div class="player-status white">
                <div class="color"></div>
            </div>
        </div>
        <div class="loser-button">
            <a class="btn btn-white white mont">Loser</a>
            <br/>
            <small>White</small>
        </div>
    </div>
    <div class="col-xs-2">
        <a class="swap"> swap </a>
    </div>
    <div class="col-xs-5">
        <div class="player-container lose{{#if isBlackLoser }} selected{{/if}}">
            <img src="{{ losingBlack.icon_url }}" class="player img-responsive" id="{{ losingBlack.name }}"/>
             <div class="player-status black">
                <div class="color"></div>
            </div>
        </div>
        <div class="loser-button">
            <a class="btn btn-black black mont">Loser</a>
            <br/>
            <small>Black</small>
        </div>
    </div>
</div>

